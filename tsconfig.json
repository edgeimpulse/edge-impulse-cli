{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "esModuleInterop": true,
        "outDir": "./build",
        "strict": true,
        "sourceMap": true,
        "allowJs": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitThis": true
    },
    "include": [
        "**/*"
    ]
}
